<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_Page">

    <SearchView
        android:id="@+id/search"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/my_btn_"
        android:queryHint="@android:string/search_go"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toStartOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/logo_round" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Cash In"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/search"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:padding="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <Button
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_btn_"
            android:text="@string/Profile" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="14dp"/>

        <Button
            android:id="@+id/investment-earns"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_btn_"
            android:text="Invest and Earn" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="14dp"/>

        <Button
            android:id="@+id/purchases"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_btn_"
            android:text="Purchases investment" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="14dp"/>

        <Button
            android:id="@+id/messages"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_btn_"
            android:text="@string/Messages" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="14dp"/>

        <Button
            android:id="@+id/withdrawcash"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_btn_"
            android:text="Withdraw Cash" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="14dp"/>

        <Button
            android:id="@+id/terms-conditions"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_btn_"
            android:text="Terms and Conditions" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="14dp"/>

        <Button
            android:id="@+id/Help"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_btn_"
            android:text="Help" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="14dp"/>

        <Button
            android:id="@+id/Less"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/my_btn_"
            android:text="@string/Less" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>